<script src="http://code.highcharts.com/highcharts.js"></script>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @city.name %>
</p>

<p>
  <strong>Code:</strong>
  <%= @city.code %>
</p>

<p>
  <strong>Time zone:</strong>
  <%= @city.time_zone %>
</p>

<p>
  <strong>Suggest bounds:</strong>
  <%= @city.suggest_bounds %>
</p>

<%= high_chart("count", @count) if @count %>

<%= high_chart("distribution", @distribution) if @distribution %>

<% if @city.search_areas.blank? %>
<%= link_to 'Create Search Areas', create_search_areas_city_path(@city) %> |
<% end %>
<%= link_to 'Search Areas', search_areas_path(city_id: @city.id) %> |
<%= link_to 'Edit', edit_city_path(@city) %> |
<%= link_to 'Back', cities_path %>
